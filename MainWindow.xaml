<Window x:Class="AptekaHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AptekaHelper"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Apteka Helper" Height="564.8" Width="270">
    <Grid>
        <TabControl Name="Tabs" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="264" SelectionChanged="TabControl_SelectionChanged"/>
        <Frame Name="PagesFrame" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="264" Margin="0,24,0,0"/>
        <DataGrid Name="LogData" HorizontalAlignment="Left" Height="290" Margin="10,235,0,0" VerticalAlignment="Top" Width="244">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Log" IsReadOnly="True" Binding="{Binding Path=Data}" Width="400"></DataGridTextColumn>
            <DataGridTextColumn Header="Error" IsReadOnly="True" Binding="{Binding Path=FullData}" Width="400"></DataGridTextColumn>
          </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
